<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/big_iv_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_ad_icon_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/big_btn_install"
            android:layout_toRightOf="@+id/big_iv_icon"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/big_main_title"
                android:layout_width="wrap_content"
                android:textColor="@color/translucent_black"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="ad title"
                android:textSize="18sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>