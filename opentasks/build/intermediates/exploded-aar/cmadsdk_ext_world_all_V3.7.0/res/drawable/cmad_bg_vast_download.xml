<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 圆角 -->
    <corners
        android:radius="3dp"
        /><!-- 设置圆角半径 -->

    <!-- 渐变 -->
    <gradient
        android:startColor="#FF49C2F4"
        android:endColor="#FF039BE5"
        android:useLevel="true"
        android:angle="45"
        android:type="radial"
        android:centerX="0"
        android:centerY="0"
        android:gradientRadius="90"/>

    <!-- 填充 -->
    <solid
        android:color="#FF039BE5"/><!-- 填充的颜色 -->



</shape>